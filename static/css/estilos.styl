@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?d28syh')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-facebook
  &:before
    content "\e600"
    color rgb(28, 85, 207)
    margin-right 0.3em

.icon-twitter
  &:before
    content "\e601"
    color rgb(41, 117, 201)
    margin-right 0.3em

.icon-github
  &:before
    content "\e602"
    color grey
    margin-right 0.3em

.u-title
  color #00CCFF
  border-bottom 2px dashed #00CCFF
  font-size 1.5em
  font-weight normal
  padding-bottom 0.5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1E1E1E
  text-align center
  font-size 16px
  height 3.75em
  position fixed
  left 0
  right 0
  top 0

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Header
  margin-top 3.75em
  background-image url('../img/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &.imageContainer
    margin 0

.Header-image
  border 5px solid white
  border-radius 50%

.Header-name,
.Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  color white
  text-decoration none
  padding .5em 1em
  border-radius 2em
  margin-right .5em
  display inline-block
  margin-bottom 1em
  &.twitter
    background #55ACEE
  &.facebook
    background #4862A3
  &.github
    background #829AA8

.Work
  margin-top 2em
  text-align center
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around

.Work-item
  display inline-block
  margin-bottom 1.8em

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151
  font-style italic

.Work-link
  text-decoration none

.Footer
  background-image url('../img/footer.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  padding 2em 0
  text-align center

.Footer-form
  text-align center
  display inline-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  color white
  border-radius 1em
  border none
  padding .5em 1em

@media screen and (max-width: 480px)
  .Profile
    &-link
      display block
      
@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput,
    &-textarea
      width 90%
      box-sizing border-box
      
